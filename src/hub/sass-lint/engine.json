{
    "$schema": "./../.schema/engine.json",
    "name": "sass-lint",
    "description": "A Node-only Sass linter for both sass and scss syntax", 
    "version": "1.10.2",
    "url": "https://github.com/sasstools/sass-lint",
    "languages": [
        "sass"
    ],
    "extensions": [
        "*.sass",
        "*.scss"
    ],
    "configs": [
        ".sass-lint.yml"
    ],
    "license": "MIT",
    "areas": [
        "syntax",
        "formatting"
    ],
    "requirements": [
        {
            "manager": "system",
            "package": "npm"
        },
        {
            "manager": "npm",
            "package": "sass-lint", 
            "version": "1.10.2"
        }
    ],
    "postfix": " | node file://{schema}/sass-lint/reporter.js",
    "defaults": {
        "": "*",
        "--verbose": null,
        "--format": "json"
    },
    "acceptMask": false,
    "stdin":
    {
        "available": false
    }
}
