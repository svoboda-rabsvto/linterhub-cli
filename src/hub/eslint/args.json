{
    "$schema": "./../.schema/args.json",
    "title": "eslint args schema",
    "description": "eslint configuration",
    "allOf": [
        {
            "$ref": "#/definitions/options"
        }
    ],
    "definitions": {
        "options": {
            "type": "object",
            "properties": {
                "--config": {
                    "id": "{config}",
                    "type": "string",
                    "description": "Use configuration from this file or shareable config"
                },
                "--no-eslintrc": {
                    "id": "{--no-eslintrc}", 
                    "type": "null",
                    "description": "Disable use of configuration from .eslintrc"
                },
                "--env": {
                    "id": "{--env}", 
                    "type": "string",
                    "description": "Specify environments"
                },
                "--ext": {
                    "id": "{--ext}", 
                    "type": "string",
                    "description": "Specify JavaScript file extensions"
                },
                "--global": {
                    "id": "{--global}",
                    "type": "string",
                    "description": "Define global variables"
                },
                "--parser": {
                    "id": "{--parser}",
                    "type": "string",
                    "description": "Specify the parser to be used"
                },
                "--parser-options": {
                    "id": "{--parser-options}",
                    "type": "string",
                    "description": "Specify parser options"
                },
                "--cache": {
                    "id": "{--cache}", 
                    "type": "null",
                    "description": "Only check changed files"
                },
                "--cache-location": {
                    "id": "{--cache-location}", 
                    "type": "string",
                    "description": "Path to the cache file or directory"
                },
                "--rulesdir": {
                    "id": "{--rulesdir}", 
                    "type": "string",
                    "description": "Use additional rules from this directory"
                },
                "--plugin": {
                    "id": "{--plugin}", 
                    "type": "string",
                    "description": "Specify plugins"
                },
                "--rule": {
                    "id": "{--rule}", 
                    "type": "string",
                    "description": "Specify rules"
                },
                "--ignore-path": {
                    "id": "{--ignore-path}", 
                    "type": "string",
                    "description": "Specify path of ignore file"
                },
                "--no-ignore": {
                    "id": "{--no-ignore}", 
                    "type": "null",
                    "description": "Disable use of ignore files and patterns"
                },
                "--ignore-pattern": {
                    "id": "{--ignore-pattern}", 
                    "type": "string",
                    "description": "Pattern of files to ignore (in addition to those in .eslintignore)"
                },
                "--stdin": {
                    "id": "{stdin}", 
                    "type": "null",
                    "description": "Lint code provided on stdin"
                },
                "--stdin-filename": {
                    "type": "string",
                    "description": "Specify filename to process stdin as"
                },
                "--quiet": {
                    "id": "{--quiet}", 
                    "type": "null",
                    "description": "Report errors only"
                },
                "--max-warnings": {
                    "id": "{--max-warnings}",
                    "type": "integer",
                    "description": "Number of warnings to trigger nonzero exit code",
                    "default": "-1"
                },
                "--output-file": {
                    "type": "string",
                    "description": "Specify file to write report to"
                },
                "--format": {
                    "description": "Use a specific output format",
                    "oneOf": [
                        {
                            "type": "string",
                            "enum": [
                                "checkstyle",
                                "codeframe",
                                "compact",
                                "html",
                                "jslint-xml",
                                "json",
                                "junit",
                                "stylish",
                                "table",
                                "tap",
                                "unix",
                                "visualstudio"
                            ]
                        },
                        {
                            "type": "string",
                            "format": "uri"
                        }
                    ],
                    "default": "json"
                },
                "--color": {
                    "type": "null",
                    "description": "Force enabling of color"
                },
                "--no-color": {
                    "type": "null",
                    "description": "Force disabling of color"
                },
                "--init": {
                    "type": "null",
                    "description": "Run config initialization wizard"
                },
                "--fix": {
                    "type": "null",
                    "description": "Automatically fix problems"
                },
                "--debug": {
                    "id": "{--debug}",
                    "type": "null",
                    "description": "Output debugging information"
                },
                "--no-inline-config": {
                    "id": "{--no-inline-config}", 
                    "type": "null",
                    "description": "Prevent comments from changing config or rules"
                },
                "--print-config": {
                    "type": "null",
                    "description": "Print the configuration to be used"
                },
                "--help": {
                    "type": "null",
                    "description": "Show help"
                },
                "--version": {
                    "id": "{version}", 
                    "type": "null",
                    "description": "Show version"
                },
                "": {
                    "id": "{path}",
                    "type": "string",
                    "description": "Path for analysis"
                }
            }
        },
        "section": {
            "type": "object",
            "description": "The engine configuration section",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The engine name",
                    "enum": [
                        "eslint"
                    ]
                },
                "options": {
                    "type": "object",
                    "description": "The engine configuration",
                    "$ref": "#/definitions/options"
                }
            }
        }
    }
}
