{
    "$schema": "./../.schema/engine.json",
    "name": "standard",
    "description": "JavaScript Standard Style",
    "version": "10.0.2",
    "url": "http://standardjs.com",
    "languages": [
        "javascript"
    ],
    "extensions": [
        "*.js"
    ],
    "license": "MIT",
    "areas": [
        "syntax"
    ],
    "requirements": [
        {
            "manager": "system",
            "package": "npm"
        },
        {
            "manager": "npm",
            "package": "standard",
            "version": "10.0.2"
        }
    ],
    "postfix": " | node file://{schema}/standard/reporter.js",
    "defaults": {
        "--verbose": null,
        "": "**/**/*.js"
    }
}
