{
    "$schema": "./../.schema/engine.json",
    "name": "htmlhint",
    "description": "HTMLHint is a Static Code Analysis Tool for HTML",
    "version": "0.9.13",
    "url": "http://htmlhint.com",
    "languages": [
        "html"
    ],
    "extensions": [
        "*.html"
    ],
    "configs": [
        "htmlhint.conf"
    ],
    "license": "MIT",
    "areas": [
        "syntax"
    ],
    "requirements": [
        {
            "manager": "system",
            "package": "npm"
        },
        {
            "manager": "npm",
            "package": "htmlhint",
            "version": "0.9.13"
        }
    ],
    "postfix": " | node file://{schema}/htmlhint/reporter.js",
    "defaults": {
        "": "**/**/*.html",
        "--format": "json"
    },
    "stdin": {
        "stdin": null
    }
}
