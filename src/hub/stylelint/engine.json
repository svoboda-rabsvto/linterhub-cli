{
    "$schema": "./../.schema/engine.json",
    "name": "stylelint",
    "description": "A mighty, modern CSS linter that helps you enforce consistent conventions and avoid errors in your stylesheets.",
    "url": "https://stylelint.io/",
    "languages": [
        "css"
    ],
    "extensions": [
        "*.css",
        "*.scss",
        "*.less",
        "*.sss"
    ],
    "license": "MIT",
    "areas": [
        "simplification",
        "syntax",
        "formatting"
    ],
    "requirements": [
        {
            "manager": "system",
            "package": "npm"
        },
        {
            "manager": "npm",
            "package": "stylelint"
        }
    ],
    "version": {
        "local": "7.11.1",
        "package": "7.11.1"
    },
    "defaults": {
        "": "**/**/*.*",
        "--custom-formatter": "file://{schema}/stylelint/reporter.js",
        "--config": "file://{schema}/stylelint/.stylelintrc"
    }
}
