{
    "$schema": "./../.schema/engine.json",
    "name": "tslint",
    "description": "An extensible linter for the TypeScript language.",
    "url": "https://palantir.github.io/tslint/",
    "languages": [
        "typescript"
    ],
    "extensions": [
        "*.ts"
    ],
    "license": "Apache-2.0",
    "areas": [
        "simplification",
        "syntax",
        "formatting",
        "complexity",
        "unused code"
    ],
    "requirements": [
        {
            "manager": "system",
            "package": "npm"
        },
        {
            "manager": "npm",
            "package": "typescript"
        },
        {
            "manager": "npm",
            "package": "tslint"
        }
    ],
    "postfix": " | node file://{schema}/tslint/reporter.js",
    "version": {
        "local": "5.4.3",
        "package": "5.4.3"
    },
    "defaults": {
        "": "**/**/*.ts",
        "--format": "verbose",
        "--config": "file://{schema}/tslint/tslint.json"
    }
}
