{
    "$schema": "./../.schema/args.json",
    "title": "jshint args schema",
    "description": "jshint configuration",
    "type": "object",
    "allOf": [
        {
            "$ref": "#/definitions/options"
        }
    ],
    "definitions": {
        "options": {
            "type": "object",
            "properties": {
                "--config": {
                    "id": "{config}",
                    "type": "string",
                    "description": "Custom configuration file"
                },
                "--reporter": {
                    "type": "string",
                    "description": "Custom reporter",
                    "oneOf": [
                        {
                            "type": "string",
                            "enum": [
                                "jslint",
                                "checkstyle",
                                "unix"
                            ]
                        },
                        {
                            "type": "string",
                            "format": "uri"
                        }
                    ]
                },
                "--prereq": {
                    "id": "--prereq",
                    "type": "string",
                    "description": "Comma-separate list of prerequisite (paths). E.g. files which include definitions of global variables used throughout your project"
                },
                "--exclude": {
                    "id": "--exclude",
                    "type": "string",
                    "description": "Exclude files matching the given filename pattern"
                },
                "--exclude-path": {
                    "id": "--exclude-path",
                    "type": "string",
                    "description": "Pass in a custom jshintignore file path"
                },
                "--filename": {
                    "id": "--filename",
                    "type": "string",
                    "description": "Pass in a filename when using STDIN to emulate config lookup for that file name"
                },
                "--verbose": {
                    "id": "--verbose",
                    "type": "null",
                    "description": "Show message codes"
                },
                "--show-non-errors": {
                    "id": "--show-non-errors",
                    "type": "null",
                    "description": "Show additional data generated by jshint"
                },
                "--extra-ext": {
                    "id": "--extra-ext",
                    "type": "string",
                    "description": "Comma-separated list of file extensions to use"
                },
                "--extract": {
                    "id": "--extract",
                    "type": "string",
                    "description": "Extract inline scripts contained in HTML",
                    "enum": [
                        "auto",
                        "always",
                        "never"
                    ],
                    "default": "never"
                },
                "-": {
                    "id": "{stdin}",
                    "type": "null",
                    "description": "Read source from standard input"
                },
                "--help": {
                    "type": "string",
                    "description": "Show help"
                },
                "--version": {
                    "id": "{version}",
                    "type": "string",
                    "description": "Show version"
                },
                "": {
                    "id": "{path}",
                    "type": "string",
                    "description": "Path for analysis"
                }
            }
        },
        "section": {
            "type": "object",
            "description": "The engine configuration section",
            "properties": {
                "name": {
                    "type": "string",
                    "description": "The engine name",
                    "enum": [
                        "jshint"
                    ]
                },
                "options": {
                    "type": "object",
                    "description": "The engine configuration",
                    "$ref": "#/definitions/options"
                }
            }
        }
    }
}
