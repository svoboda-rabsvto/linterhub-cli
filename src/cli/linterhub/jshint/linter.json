{
    "$schema": "./../linter.schema.json",
    "name": "jshint",
    "description": "JSHint is a tool that helps to detect errors and potential problems in your JavaScript code",
    "url": "http://jshint.com",
    "languages": [ "javascript" ],
    "extensions": [ "*.js" ],
    "license": "MIT",
    "areas": [ "syntax", "formatting", "complexity", "unused code" ],
    "requirements": [ 
        { "manager": "system", "package": "npm" },
        { "manager": "npm", "package": "jshint" }
    ],
    "version": {
        "local": "jshint v2.9.4",
        "package": "2.9.4"
    },
  "defaults": {
    "": "./",
    "--reporter": "file://{schema}/jshint/reporter.js"
  }
}