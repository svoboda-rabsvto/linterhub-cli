{
  "$schema": "./../linter.schema.json",
  "name": "standard",
  "description": "JavaScript Standard Style",
  "url": "http://standardjs.com",
  "languages": [ "javascript" ],
  "extensions": [ "*.js" ],
  "license": "MIT",
  "areas": [ "syntax" ],
  "requirements": [
    {
      "manager": "system",
      "package": "npm"
    },
    {
      "manager": "npm",
      "package": "standard"
    }
  ],
  "version": {
    "local": "10.0.2",
    "package": "10.0.2"
  },
  "postfix": " | node file://{schema}/standard/reporter.js",
  "defaults": {
    "--verbose": null,
    "": "**/**/*.js"
  }
}